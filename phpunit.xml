<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="../../../bootstrap/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <testsuites>
        <testsuite name="Unit Test Suite">
            <directory suffix=".php">./tests/units</directory>
        </testsuite>
        <testsuite name="Controllers Test Suite">
            <directory suffix=".php">./tests/controllers</directory>
        </testsuite>
        <testsuite name="Database Models Test Suite">
            <directory suffix=".php">./tests/database/models</directory>
        </testsuite>
    </testsuites>
</phpunit>
